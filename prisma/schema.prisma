datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  password String
  expenses Expense[]
}

model Expense {
  id       Int      @id @default(autoincrement())
  title    String
  amount   Float
  date     DateTime @default(now())
  userId   Int
  user     User     @relation(fields: [userId], references: [id])
}
